{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/core/tauri-config-schema/schema.json",
  "productName": "Demiarch",
  "version": "0.1.0",
  "identifier": "com.demiarch.app",
  "build": {
    "beforeDevCommand": "cd ../../gui && npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../../gui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Demiarch",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}
